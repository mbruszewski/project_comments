<div class="max-w-2xl mx-auto py-8">
  <h2 class="text-2xl font-bold mb-4">Edit Comment</h2>
  <%= form_with(model: @comment, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :author, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :author, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit "Update Comment", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Cancel', comments_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
