 <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">New Comment</h2>
  <%= form_with(model: @comment, local: true) do |form| %>
    <%= hidden_field_tag "comment[commentable_id]", @comment.commentable_id %>
    <%= hidden_field_tag "comment[commentable_type]", @comment.commentable_type %>
    <div class="mb-4">
      <%= form.label :author, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :author, class: "w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="mb-4">
      <%= form.label :body, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :body, class: "w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    <div class="flex justify-end">
      <%= form.submit "Create Comment", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
