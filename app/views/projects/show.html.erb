<div class="mb-4">
  <%= link_to 'Back to Projects', projects_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
</div>

<div class="max-w-4xl mx-auto p-4">
  <div class="bg-white shadow-md rounded-lg p-6 mb-4">
    <h2 class="text-2xl font-bold mb-2"><%= @project.name %></h2>
    <p class="text-gray-700"><strong>Author:</strong> <%= @project.author %></p>
    <p class="text-gray-700"><strong>Status:</strong> <%= @project.status %></p>
    <p class="text-gray-700"><strong>Start Date:</strong> <%= @project.start_date %></p>
    <p class="text-gray-700"><strong>End Date:</strong> <%= @project.end_date %></p>
    <div class="mt-4">
      <%= link_to 'Delete Project', project_path(@project), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
  
  <div class="bg-white shadow-md rounded-lg p-6">
    <h3 class="text-xl font-semibold mb-4">Comments:</h3>
    <div class="mb-4">
      <%= link_to 'Add Comment', new_comment_path(comment: { commentable_id: @project.id, commentable_type: @project.class }), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
    <% @project.comments.each do |comment| %>
      <div class="border-b border-gray-200 pb-4 mb-4">
        <p class="text-gray-800"><strong><%= comment.author %>:</strong></p>
        <p class="text-gray-600"><%= comment.body %></p>
        <div class="mt-2">
          <%= link_to 'Edit Comment', edit_comment_path(comment, commentable: @project), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-2 rounded' %>
          <%= link_to 'Remove Comment', comment_path(comment), method: :delete, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
